<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dual_robots_config">

    <!-- Root link -->
    <link name="world"/>

    <!-- Xacro imports -->
    <xacro:include filename="robot_with_gripper.urdf.xacro" />

    <!-- alice -->
    <xacro:ur5e_gripper name="alice_" tf_prefix="alice_" prefix="alice_" parent="world">
        <origin xyz="0.5 0 0" rpy="0 0 0" />
    </xacro:ur5e_gripper>

    <!-- bob -->
    <xacro:ur5e_gripper name="bob_" tf_prefix="bob_" prefix="bob_" parent="world">
        <origin xyz="-0.5 0 0" rpy="0 0 0" />
    </xacro:ur5e_gripper>

    <gazebo>
        <plugin filename="libign_ros2_control-system.so" name="ign_ros2_control::IgnitionROS2ControlPlugin">
            <parameters>$(find dual_robot_combined_description)/config/dual_robot_combined_controller.yaml</parameters>
        </plugin>
    </gazebo>

</robot>
